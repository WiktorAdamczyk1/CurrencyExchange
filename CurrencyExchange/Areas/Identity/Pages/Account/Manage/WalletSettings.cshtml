@page
@model CurrencyExchange.Areas.Identity.Pages.Account.Manage.WalletSettingsModel
@{
    ViewData["Title"] = "Wallet Balance";
    ViewData["ActivePage"] = ManageNavPages.CurrencySettings;
}
<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.PLN"></label>
                <input type="number" min="0" step="1" asp-for="Input.PLN" class="form-control" />
                <span asp-validation-for="Input.PLN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.USD"></label>
                <input type="number" min="0" step="1" asp-for="Input.USD" class="form-control" />
                <span asp-validation-for="Input.USD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.EUR"></label>
                <input type="number" min="0" step="1" asp-for="Input.EUR" class="form-control" />
                <span asp-validation-for="Input.EUR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CHF"></label>
                <input type="number" min="0" step="1" asp-for="Input.CHF" class="form-control" />
                <span asp-validation-for="Input.CHF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.RUB"></label>
                <input type="number" min="0" step="1" asp-for="Input.RUB" class="form-control" />
                <span asp-validation-for="Input.RUB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CZK"></label>
                <input type="number" min="0" step="1" asp-for="Input.CZK" class="form-control" />
                <span asp-validation-for="Input.CZK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.GBP"></label>
                <input type="number" min="0" step="1" asp-for="Input.GBP" class="form-control" />
                <span asp-validation-for="Input.GBP" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}